{
    "name": "chuoke/laravel-table-comment",
    "description": "Laravel table comment for migration",
    "keywords": [
        "chuoke",
        "laravel-table-comment"
    ],
    "homepage": "https://github.com/chuoke/laravel-table-comment",
    "license": "MIT",
    "authors": [
        {
            "name": "chuoke",
            "email": "chuokechungyoung@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpunit/phpunit": "^9.5",
        "vimeo/psalm": "^4.8"
    },
    "autoload": {
        "psr-4": {
            "Chuoke\\LaravelTableComment\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Chuoke\\LaravelTableComment\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
